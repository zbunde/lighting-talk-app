.container
  .page-header
    .pull-right
      = link_to 'New User', new_admin_user_path, class: 'btn btn-pink'
    %h1 Manage Users
  %table.table.table-striped
    %thead
      %th Username
      %th Email
      %th Admin
    %tbody
      - @users.each do |user|
        %tr
          %td= user.username
          %td= user.email
          %td= user.admin ? 'Yes': 'No'
          %td.pull-right
            = link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-primary'
          - if !user.admin
            %td.pull-right
              = link_to 'Delete', admin_user_path(user), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"}
  = paginate @users, theme: 'twitter-bootstrap-3', pagination_class: 'pagination-md'
