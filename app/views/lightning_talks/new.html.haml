.container
  = form_for ([@user, @lightning_talk]), html: {class: "form-horizontal"} do |f|
    .form-group
      = f.label :name, class: "control-label col-md-2"
      .col-md-9
        = f.text_field :name, class: "form-control"

    .form-group
      = f.label :day_id, class: "control-label col-md-2"
      .col-md-6
        = f.select :day_id, options_from_collection_for_select(@days, "id", "talk_date"), {}, class: "form-control"

    .form-group
      .col-md-offset-2.col-md-9
        = f.submit "Create Lightning Talk", class: "btn btn-primary"
